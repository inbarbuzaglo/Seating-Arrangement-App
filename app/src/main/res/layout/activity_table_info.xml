<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".TableInfo">


    <TextView
        android:id="@+id/tablenum"
        android:layout_width="171dp"
        android:layout_height="52dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:text="Table number:"
        android:textSize="50px" />

    <TextView

        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="120dp"

        android:text="Guests:"
        android:textSize="50px" />

    <TextView

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SeatsNumber"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="33dp"

        android:text="number of chairs:"
        android:textSize="50px" />


    <ListView
        android:id="@android:id/list"
        android:layout_width="269dp"
        android:layout_height="240dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="92dp"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/TableNum"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="9dp" />

    <View
        android:id="@+id/SeatsNumber"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_below="@+id/TableNum"
        android:layout_alignParentStart="true"
        android:layout_marginStart="228dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp" />

    <Button
        android:id="@+id/commentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="375dp"
        android:text="comment" />

    <EditText
        android:id="@+id/txtItem1"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="first name" />

    <Button
        android:id="@+id/add_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtItem1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:text="Add guest" />

    <EditText
        android:id="@+id/txtItem2"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtItem1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="last name" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>